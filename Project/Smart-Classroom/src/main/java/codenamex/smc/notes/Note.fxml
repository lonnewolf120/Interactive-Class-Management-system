<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.Button?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" fx:id="AP" prefHeight="260.0" prefWidth="260.0"
            styleClass="AP" xmlns="http://javafx.com/javafx/8.0.171"
            fx:controller="codenamex.smc.notes.NoteController">
    <stylesheets>
<!--        <URL value="@note.css" />-->
    </stylesheets>
   <children>
      <Label fx:id="id" textFill="TRANSPARENT" />
      <VBox>
         <children>
            <TextArea fx:id="text" nodeOrientation="LEFT_TO_RIGHT" onKeyReleased="#editAction" prefHeight="260.0" prefWidth="260.0" promptText="Take a note ..." >
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <font>
                  <Font size="18.0" />
               </font>
            </TextArea>
         </children>
      </VBox>
      <Button onAction="#delete" prefHeight="21.0" prefWidth="18.0" text="X" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
   </children>
</AnchorPane>
